# Production Environment Configuration for CS Student Hub
# Copy this file to .env.production and fill in your actual values

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=production
DEBUG=False

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Generate a new secret key for production: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-production-key-here

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
DOMAIN_NAME=your-domain.com
API_DOMAIN=api.your-domain.com
FRONTEND_URL=https://your-domain.com
ADMIN_URL=https://admin.your-domain.com

# =============================================================================
# DATABASE CONFIGURATION (AWS RDS PostgreSQL)
# =============================================================================
DATABASE_NAME=cshub_production
DATABASE_USER=cshub_admin
DATABASE_PASSWORD=your-secure-database-password
DATABASE_HOST=your-rds-endpoint.region.rds.amazonaws.com
DATABASE_PORT=5432

# =============================================================================
# REDIS CONFIGURATION (AWS ElastiCache)
# =============================================================================
REDIS_URL=redis://your-elasticache-endpoint:6379

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=cshub-media-bucket
AWS_S3_REGION_NAME=us-east-1

# AWS Load Balancer (will be auto-generated during deployment)
AWS_ELB_DOMAIN=your-load-balancer-dns.us-east-1.elb.amazonaws.com

# =============================================================================
# API TOKENS (Same as development)
# =============================================================================
GITHUB_TOKEN=your-github-token-here
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=cs-student-hub/1.0

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
SENTRY_DSN=your-sentry-dsn-for-error-tracking
LOG_LEVEL=INFO